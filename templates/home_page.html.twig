{% extends 'base.html.twig' %}
{% block javascripts %}
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
{% endblock %}
{% block body %}
    {% include('utils/header.html.twig') %}
    <section class="section">

        <div class="container">
            <div class="row">
                <img src="{{ asset('image/bandeau.jpg') }}" >
            </div>

            <div class="is-flex is-flex-direction-row is-justify-content-center">

                <div class="is-flex is-flex-direction-row is-align-items-center is-justify-content-space-evenly">
                    <a class="mr-2">Shop by brand</a>
                    <img class="mr-2" src="{{ asset('image/logoJordan.png') }}" width="45px" heigth="45px">
                    <img class="mr-2" src="{{ asset('image/logoAdidas.png') }}" width="45px" heigth="45px">
                    <img src="{{ asset('image/logoNike.png') }}" width="45px" heigth="45px">
                </div>
            </div>

            <div class="row">
                <h4 class>Most Popular</h4>
            </div>


            {% set nb = 0 %}
                <div class="columns">

                    {%  for p in product | slice(0,4)%}

                    {% set nb = nb+1 %}

					<div class="column">
                        <div class="card mr-5">
                            <div class="card-image">
                                <figure class="image is-square">
									{% if p.image is not null %}
                                    <img style="object-fit: cover" src="{{ asset(p.image) }}" alt="Placeholder image">
									{% endif %}
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-content">
                                        <p class="title is-4">{{ p.name }}</p>
                                    </div>
                                </div>

                                <div class="content">
                                    {{ p.price}}
                                </div>
                            </div>
                            <footer class="card-footer">
                                <a href="/product/{{ p.getId() }}" class="card-footer-item has-text-black">More detail</a>
                            </footer>
                        </div>
					</div>
                        {% endfor %}
                </div>
                </div>
        </div>
    </section>
    {% include('utils/footer.html.twig') %}
{% endblock %}