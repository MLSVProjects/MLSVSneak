{% extends 'base.html.twig' %}
{% block javascripts %}
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
{% endblock %}
{% block body %}
    {% include('utils/header.html.twig') %}

    <div class="columns mt-3">

        <div class="column"></div>

        <div class="column is-two-thirds">

            <div class="row">
                <div class="field">
                    <p class="control has-icons-left">
                        <input class="input" type="text" placeholder="Back to store">
                        <span class="icon is-small is-left">
                            <i class="fas fa-solid fa-arrow-left"></i>
                        </span>

                    </p>
                </div>
            </div>

            <div class="row mt-5">

                <div class="columns">
                    <div class="column">
                        <img src="{{ asset('image/midChicago.png') }}" >
                    </div>

                    <div class="column is-three-fifths">
                        <div class="row">
                            <p class="is-size-4">
                            <b>Jordan 1 Mid Chicago</b>
                            </p>
                        </div>

                        <div class="row mt-2">
                            <p class="is-size-5">From 268$</p>
                        </div>

                        <div class="row mt-2">
                            <a class="button has-text-right">
                            <span class="icon is-small">
                                <i class="fas fa-solid fa-heart"></i>
                            </span>
                                <p>Add to Favorite</p>
                            </a>
                        </div>

                        <div class="row mt-2">
                            <p>Select size :</p>
                        </div>

                        <div class="row mt-2">
                            <button class="button is-rounded is-black">8US</button>
                            <button class="button is-rounded is-black ml-2">8.5US</button>
                            <button class="button is-rounded is-black ml-2">9US</button>
                            <button class="button is-rounded is-black ml-2">9.5US</button>
                        </div>

                        <div class="row mt-2 mb-6">
                            <button class="button is-rounded is-black">10US</button>
                            <button class="button is-rounded is-black ml-2">10.5US</button>
                            <button class="button is-rounded is-black ml-2">11US</button>
                            <button class="button is-rounded is-black ml-2">11.5US</button>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row mt-6">
                    <button class="button is-rounded is-black" onclick="window.location.href='{{ path('price_history') }}'" >ACCESS PRICE HISTORY</button>
            </div>

            <div class="box mt-6">
                <div class="columns">
                    <div class="column is-one-third">
                        <p>Jordan 1 Mid Chicago</p>
                    </div>

                    <div class="column is-one-third">
                        <p class=" has-text-centered">268$</p>
                    </div>

                    <div class="column is-one-third has-text-right">
                        <button class="button is-rounded is-black is-small" onclick="window.location.href='{{ path('shopping_card') }}'">ADD TO CARD</button>
                    </div>

                </div>


            </div>


        </div>

        <div class="column"></div>

    </div>

    {% include('utils/footer.html.twig') %}
{% endblock %}